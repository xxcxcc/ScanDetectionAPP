<Window
    x:Class="ScanDetectionAPP.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ScanDetectionAPP.Views"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    Title="登录"
    Width="450"
    Height="600"
    Icon="/Resource/激光雷达.ico"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid Background="#FFCCD0D6" ShowGridLines="False">
        <!--  分列  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="0.8*" />
        </Grid.RowDefinitions>

        <!--  顶部标题区  -->
        <Grid Grid.Row="0" Background="#FF191A1F">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Image
                    Width="30"
                    Height="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="/Resource/激光雷达.png" />
                <Label
                    Content="LIDAR ProScan"
                    Height="40"
                    Background="#FF191A1F"
                    BorderBrush="{x:Null}"
                    FontFamily="微软雅黑"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White" />
            </StackPanel>
        </Grid>

        <!--  中部信息区  -->
        <StackPanel Grid.Row="1"
            Width="400"
            Height="423"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <Label
                Content="激光雷达扫描系统登录"
                Height="50"
                Margin="0,30,0,0"
                HorizontalAlignment="Center"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                FontFamily="微软雅黑"
                FontSize="26"
                FontWeight="Bold"
                Foreground="Black" />

            <BulletDecorator Height="25" Margin="0,30,0,0">
                <BulletDecorator.Bullet>
                    <Image
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Source="/Resource/用户.png" />
                </BulletDecorator.Bullet>
                <TextBlock
                    Text="用户名"
                    Margin="5,0,0,0"
                    VerticalAlignment="Bottom"
                    FontFamily="微软雅黑"
                    FontSize="18"
                    FontWeight="Bold" />
            </BulletDecorator>

            <Grid Height="50" Margin="0,5,0,0">
                <hc:TextBox
                    Text="{Binding UserName}"
                    Height="50"
                    hc:InfoElement.Placeholder="请输入用户名"
                    hc:InfoElement.ShowClearButton="True"
                    FontSize="18" />
                <!--<Image Source="/Resource/用户.png" HorizontalAlignment="Right" Width="50" Height="50"/>-->
            </Grid>

            <BulletDecorator Height="25" Margin="0,30,0,0">
                <BulletDecorator.Bullet>
                    <Image
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Source="/Resource/密码.png" />
                </BulletDecorator.Bullet>
                <TextBlock
                    Text="密码"
                    Margin="5,0,0,0"
                    Background="#FFCCD0D6"
                    FontFamily="微软雅黑"
                    FontSize="18"
                    FontWeight="Bold" />
            </BulletDecorator>

            <Grid Height="50" Margin="0,5,0,0">
                <hc:PasswordBox
                    Height="50"
                    hc:InfoElement.Placeholder="请输入密码"
                    hc:InfoElement.ShowClearButton="True"
                    FontSize="18"
                    IsSafeEnabled="False"
                    ShowEyeButton="True"
                    UnsafePassword="{Binding UserPassword}" />
                <!--<Image Source="/Resource/密码.png" HorizontalAlignment="Right" Width="43" Height="43"/>-->
            </Grid>

            <Button
                Content="安全登录"
                Command="{Binding LoginCommand}"
                Height="50"
                Margin="0,30,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                hc:BackgroundSwitchElement.MouseHoverBackground="Coral"
                Background="#FF1A3FB1"
                BorderBrush="{x:Null}"
                FontFamily="微软雅黑"
                FontSize="20"
                FontWeight="Bold"
                Foreground="White"
                Style="{StaticResource ButtonCustom}" />
        </StackPanel>

        <StackPanel Grid.Row="2"
            Background="#FF474650"
            Orientation="Vertical">
            <Label
                Content="系统版本：V1.1"
                Height="26"
                Margin="0,5,0,5"
                Background="#FF474650"
                BorderBrush="{x:Null}"
                BorderThickness="0,0,0,0"
                Foreground="White"
                Opacity="0.5"
                ScrollViewer.CanContentScroll="True" />
            <Label
                Content="©2025 江苏航智嘉信息科技有限公司 版权所有"
                Height="26"
                Background="#FF474650"
                BorderBrush="{x:Null}"
                Foreground="White"
                Opacity="0.5" />
        </StackPanel>

    </Grid>
</Window>