<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<!-- log4net配置节点 -->
	<log4net>
		<!-- 1. 定义日志输出到文件（核心配置） -->
		<appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
			<!-- 日志文件路径：这里保存在项目的“Logs”文件夹下，按日期命名（比如20240520.log） -->
			<file value="Logs\" />
			<!-- 文件夹名 -->
			<datePattern value="yyyyMMdd'.log'" />
			<!-- 文件名格式（按日期分割） -->
			<rollingStyle value="Composite" />
			<!-- 按“日期+文件大小”分割（避免单个文件过大） -->
			<maxSizeRollBackups value="10" />
			<!-- 最多保留10个历史日志文件 -->
			<maximumFileSize value="10MB" />
			<!-- 单个日志文件最大10MB -->
			<staticLogFileName value="false" />
			<!-- 不使用固定文件名（按日期动态生成） -->

			<!-- 日志内容格式：包含“时间、日志级别、ViewModel名称、日志内容、异常信息” -->
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date{yyyy-MM-dd HH:mm:ss} [%level] %logger - %message%newline%exception" />
			</layout>
		</appender>

		<!-- 2. 定义日志输出到控制台（开发时方便查看，可选） -->
		<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date{HH:mm:ss} [%level] - %message%newline" />
			</layout>
		</appender>

		<!-- 3. 启用日志输出（同时启用文件和控制台） -->
		<root>
			<level value="INFO" />
			<!-- 日志级别：INFO及以上（DEBUG/INFO/WARN/ERROR/FATAL）才会记录 -->
			<appender-ref ref="RollingFileAppender" />
			<!-- 启用文件输出 -->
			<appender-ref ref="ConsoleAppender" />
			<!-- 启用控制台输出（可选） -->
		</root>
	</log4net>
</configuration>